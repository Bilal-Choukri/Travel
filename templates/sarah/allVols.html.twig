{% extends 'panelAdmin.html.twig' %}

{% block title %}tout Vols!{% endblock %}

{% block body %}

  
    
    <h3><a href="{{ path('vol') }}">Ajouter un vol</a></h3>
  
    <table class="table table-dark text-center">
  <thead>
    <tr>
     
